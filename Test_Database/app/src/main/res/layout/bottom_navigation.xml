<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="652dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#A96EFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/teacher"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:src="@drawable/teacher" />

        <TextView
            android:id="@+id/txtTeacher"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="42dp"
            android:text="Quản lí \ngiáo viên"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="42dp"
            android:text="Quản lí \nmôn học"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="113dp"
            android:layout_height="37dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="42dp"
            android:text="Quản lí phiếu \nchấm bài"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="113dp"
            android:layout_height="37dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="42dp"
            android:text="Thông tin \nphiếu chấm bài"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_marginLeft="105dp"
            android:src="@drawable/subject" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/record" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_marginLeft="315dp"
            android:src="@drawable/info" />
    </androidx.cardview.widget.CardView>
</LinearLayout>