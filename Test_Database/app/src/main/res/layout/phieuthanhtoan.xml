<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="16">

    <TextView
        android:id="@+id/soPhieuHD"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/cell_shape"
        android:padding="5dp"
        android:text="Số \nphiếu"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ngayGiaoHD"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/cell_shape"
        android:padding="5dp"
        android:text="Ngày giao bài"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:textAlignment="center"
        android:layout_weight="4"
        android:id="@+id/monhoc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Môn học"
        android:background = "@drawable/cell_shape"
        android:padding = "5dp"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:textAlignment="center"
        android:layout_weight="1.5"
        android:id="@+id/sobaiHD"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Số bài"
        android:background = "@drawable/cell_shape"
        android:padding = "5dp"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:textAlignment="center"
        android:layout_weight="2.5"
        android:id="@+id/chiphiHD"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Chi phí"
        android:background = "@drawable/cell_shape"
        android:padding = "5dp"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:textAlignment="center"
        android:layout_weight="3"
        android:id="@+id/thanhtien"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Thành tiền"
        android:background = "@drawable/cell_shape"
        android:padding = "5dp"
        android:textSize="14sp"
        android:textColor="@color/black"/>
</LinearLayout>